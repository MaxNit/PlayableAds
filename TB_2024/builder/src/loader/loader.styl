gradient(color, start, stop)
  background color
  background linear-gradient(to bottom,  start 0%, stop 100%)

.loaderWrapper
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    overflow hidden
    width 100%
    height 100%
    z-index 100000 
    display none
    opacity 1 
    background-color #000
    gradient(#000, #222, #000)
   
    &._show
        display block

    &._hide
        opacity 0
        transition: opacity .5s 

.loader,
.loader:after
    border-radius 50%
    width 70px
    height 70px


.loader
    position absolute
    left 50%
    top 50%
    margin -48px 0 0 -48px
    font-size: 10px;
    position: relative;
    text-indent: -9999px;
    border-top: 10px solid #5f5f5f;
    border-right: 10px solid #fff;
    border-bottom: 10px solid #5f5f5f;
    border-left: 10px solid #ffffff;
    -webkit-transform: translateZ(0);
    -ms-transform: translateZ(0);
    transform: translateZ(0);
    -webkit-animation: ld 1.5s infinite linear;
    animation: ld 1.5s infinite linear;


@-webkit-keyframes ld {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@keyframes ld {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}